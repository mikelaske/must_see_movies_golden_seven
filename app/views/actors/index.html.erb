<h1>List of Top Actors</h1>

<table>
  <tr>
    <th>Picture</th>
    <th>Name</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @list_of_actors.each do |actor| %>
  <tr>
    <td>
      <img src="<%= actor.image_url %>" width="80">
    </td>

    <td>
      <%= actor.name %>
    </td>

    <td>
      <a href="http://localhost:3000/actors/<%= actor.id %>">Show</a>
    </td>

    <td>
      <a href="http://localhost:3000/actors/<%= actor.id %>/edit_form">Edit</a>
    </td>

    <td>
      <a href="http://localhost:3000/delete_actor/<%= actor.id %>">Delete</a>
    </td>

  </tr>
  <% end %>
</table>
