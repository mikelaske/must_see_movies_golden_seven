<h1>List of Top Directors</h1>

<table>
  <tr>
    <th>Picture</th>
    <th>Name</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @directors.each do |director| %>
  <tr>
    <td>
      <img src="<%= director.image_url %>" width="80">
    </td>
    <td>
      <%= director.name %>
    </td>
    <td>
      <a href="http://localhost:3000/directors/<%= director.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/directors/<%= director.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
